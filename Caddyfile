{
  frankenphp
  # yang benar:
  order php_server before file_server
  auto_https off
}

:80 {
  root * /app/public

  encode zstd gzip

  # Pastikan ini dieksekusi sebelum file_server
  php_server

  # Front controller fallback (aman dipertahankan)
  try_files {path} /index.php

  header {
    X-Frame-Options "SAMEORIGIN"
    X-Content-Type-Options "nosniff"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}
